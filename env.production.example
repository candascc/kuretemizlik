# ===== Environment =====
APP_ENV=production
APP_DEBUG=false
APP_BASE=/app
APP_CHARSET=UTF-8

# ===== Database Configuration =====
DB_PATH=db/app.sqlite

# ===== Security & Feature Flags =====

# MFA (Multi-Factor Authentication)
SECURITY_MFA_ENABLED=false
SECURITY_MFA_METHODS=otp_sms,totp
SECURITY_MFA_REQUIRED_ROLES=SUPERADMIN

# Security Alerts
SECURITY_ALERTS_ENABLED=false
SECURITY_ALERTS_CHANNELS=log
SECURITY_ALERTS_EMAIL_TO=
SECURITY_ALERTS_EMAIL_FROM=security@kuretemizlik.com
SECURITY_ALERTS_WEBHOOK_URL=
SECURITY_ALERTS_WEBHOOK_SECRET=
SECURITY_ALERTS_WEBHOOK_TIMEOUT=5
SECURITY_ALERTS_THROTTLE_MAX_PER_MINUTE=10
SECURITY_ALERTS_THROTTLE_BACKEND=file

# Security Analytics
SECURITY_ANALYTICS_ENABLED=true
SECURITY_ANALYTICS_BRUTE_FORCE=true
SECURITY_ANALYTICS_MULTI_TENANT_ENUM=true
SECURITY_ANALYTICS_RATE_LIMIT_ABUSE=true

# External Logging (Sentry/ELK/CloudWatch)
