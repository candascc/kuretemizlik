{
    "name": "temizlik/is-takip",
    "description": "Temizlik İş Takip Uygulaması - Comprehensive cleaning company management system",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Temizlik Team",
            "email": "info@temizlik.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "vlucas/phpdotenv": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0",
        "fakerphp/faker": "^1.23",
        "brianium/paratest": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "test-parallel": "paratest",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run",
        "stan": "phpstan analyse",
        "ci-check": [
            "@cs-check",
            "@stan",
            "@test"
        ],
        "migrate": "php src/Lib/MigrationRunner.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
