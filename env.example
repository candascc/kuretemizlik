# Environment Configuration Template
# Copy this file to .env and update the values

# Application Settings
APP_DEBUG=false
APP_BASE=/app
APP_CHARSET=UTF-8

# Database Configuration
DB_PATH=db/app.sqlite

# Security Settings
CSRF_SECRET=your-secure-csrf-secret-key-here
SESSION_TIMEOUT=3600
SESSION_NAME=temizlik_sess

# User Management (Change these in production!)
DEFAULT_ADMIN_PASSWORD=ChangeMe123!
DEFAULT_OP_PASSWORD=ChangeMe123!
ADMIN_PASSWORD=your-secure-admin-password
OP_PASSWORD=your-secure-operator-password

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png
UPLOAD_PATH=uploads/

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600

# Email Settings (for future notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=

# Timezone
TIMEZONE=Europe/Istanbul

# Logging
LOG_LEVEL=info
LOG_PATH=logs/

# Backup Settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=db/backups/

# SMS Gateway (Netgsm)
SMS_ENABLED=false
NETGSM_USERNAME=
NETGSM_PASSWORD=
NETGSM_BRAND_CODE=
NETGSM_SENDER=

# JWT Authentication (CRITICAL - REQUIRED FOR API)
# IMPORTANT: Generate a strong random secret for production!
# Command: openssl rand -hex 32
# Or use: php -r "echo bin2hex(random_bytes(32));"
JWT_SECRET=CHANGE_THIS_TO_RANDOM_SECRET_AT_LEAST_64_CHARS
JWT_SECRET_PREVIOUS=
JWT_TTL=86400

# Task Scheduler Security Token
TASK_TOKEN=CHANGE_THIS_TO_SECURE_RANDOM_TOKEN